<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:id="@+id/gvWallPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2">

        </GridView>

    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_user_defined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userDefined"
            android:textSize="@dimen/setting_right_MiddleFont_size"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_wallPager_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:textSize="@dimen/setting_right_MiddleFont_size"/>
            <Button
                android:id="@+id/btn_wallPager_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="@dimen/setting_right_MiddleFont_size"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
