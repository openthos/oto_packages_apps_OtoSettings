<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.otosettings.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/set"
                android:background="#808A87"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/setting_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/setting_normal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_setting"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/setting_title_font_size"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/usualSetting"/>
                    <RadioButton
                        android:id="@+id/setting_net"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_setting"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/setting_title_font_size"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/network"/>
                    <RadioButton
                        android:id="@+id/setting_sb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_setting"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/setting_title_font_size"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/device"/>
                    <RadioButton
                        android:id="@+id/setting_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_setting"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/setting_title_font_size"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/progress"/>
                    <RadioButton
                        android:id="@+id/setting_system"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_setting"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/setting_title_font_size"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/system"/>
                    <RadioButton
                        android:id="@+id/setting_safe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio_setting"
                        android:layout_weight="1"
                        android:button="@null"
                        android:textSize="@dimen/setting_title_font_size"
                        android:textAlignment="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/safe"/>
                </RadioGroup>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/line"
                android:layout_below="@id/set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/line"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <FrameLayout
                    android:id="@+id/left_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#808A87"
                    android:layout_weight="4"></FrameLayout>
                <FrameLayout
                    android:id="@+id/right_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
