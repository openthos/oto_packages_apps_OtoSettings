<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:background="#bfbfbf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/left_normal_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/left_setting_inform"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_setting"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="@dimen/setting_left_font_size"
                android:paddingLeft="@dimen/setting_left_paddingLeft"
                android:paddingTop="@dimen/setting_left_paddingTop"
                android:paddingBottom="@dimen/setting_left_paddingBottom"
                android:text="@string/notifyManager"/>
            <RadioButton
                android:id="@+id/left_setting_reboot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_setting"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="@dimen/setting_left_font_size"
                android:paddingLeft="@dimen/setting_left_paddingLeft"
                android:paddingTop="@dimen/setting_left_paddingTop"
                android:paddingBottom="@dimen/setting_left_paddingBottom"
                android:text="@string/openStartManager"/>
            <RadioButton
                android:id="@+id/left_setting_wireless_net"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_setting"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="@dimen/setting_left_font_size"
                android:paddingLeft="@dimen/setting_left_paddingLeft"
                android:paddingTop="@dimen/setting_left_paddingTop"
                android:paddingBottom="@dimen/setting_left_paddingBottom"
                android:text="@string/wifiNetLabel"/>
            <RadioButton
                android:id="@+id/left_setting_printer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_setting"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="@dimen/setting_left_font_size"
                android:paddingLeft="@dimen/setting_left_paddingLeft"
                android:paddingTop="@dimen/setting_left_paddingTop"
                android:paddingBottom="@dimen/setting_left_paddingBottom"
                android:text="@string/printerLabel"/>
            <RadioButton
                android:id="@+id/left_setting_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_setting"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="@dimen/setting_left_font_size"
                android:paddingLeft="@dimen/setting_left_paddingLeft"
                android:paddingTop="@dimen/setting_left_paddingTop"
                android:paddingBottom="@dimen/setting_left_paddingBottom"
                android:text="@string/shown"/>
            <RadioButton
                android:id="@+id/left_setting_firewall_net"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/radio_setting"
                android:layout_weight="1"
                android:button="@null"
                android:textSize="@dimen/setting_left_font_size"
                android:paddingLeft="@dimen/setting_left_paddingLeft"
                android:paddingTop="@dimen/setting_left_paddingTop"
                android:paddingBottom="@dimen/setting_left_paddingBottom"
                android:text="@string/fireWall"/>
        </RadioGroup>


    </LinearLayout>
</LinearLayout>
